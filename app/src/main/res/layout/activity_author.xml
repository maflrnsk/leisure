<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUp"
    android:background="@drawable/img1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@color/color1">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/img2"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedImageView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Флоринская М.К., ИКБО-33-22"
                android:textColor="@color/color2"
                android:layout_marginTop="5dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Приложение для организации досуга, год разработки - 2024 г."
                android:textColor="@color/color2"
                android:layout_marginTop="5dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:text="Почта: florinmarsk@gmail.com"
                android:textColorLink="@color/color2"
                android:textColor="@color/color2"
                android:layout_marginTop="5dp"
                android:padding="5dp" />

            <Button
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Домой"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:backgroundTint="@color/color2" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>